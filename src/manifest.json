{
    "manifest_version": 2,
    "name": "eHunter - more powerful e-hentai/eHentai/exhentai!",
    "short_name": "eHunter",
    "description": "more powerful e-hentai/eHentai/exhentai",
    "version": "1.0.0",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "eHunter"
    },
    "icons": {
        "16": "./img/icon.png",
        "24": "./img/icon.png",
        "128": "./img/icon.png"
    },
    "author": "Alex Chen",
    "incognito": "spanning",
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://exhentai.org/*",
                "*://e-hentai.org/*"
            ],
            "js": [
                "inject.js"
            ],
            "run_at": "document_end"
        }
    ]
}